<%- include('partials/_header') %>
<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row justify-content-center align-items-center min-vh-75">
                <div class="col-lg-6 col-md-8 text-center">
                    <div class="card border-0 shadow-lg">
                        <div class="card-body p-5">
                            <!-- Bootstrap Icon -->
                            <div class="mb-4">
                                <i class="bi bi-exclamation-triangle-fill text-warning display-1"></i>
                            </div>
                            
                            <!-- Error Code -->
                            <h1 class="display-4 fw-bold text-dark mb-3">404</h1>
                            
                            <!-- Error Message -->
                            <h2 class="h3 text-muted mb-4">Page Not Found</h2>
                            
                            <!-- Description -->
                            <p class="text-muted mb-4 lead">
                                Oops! The page you're looking for seems to have wandered off into the digital void.
                            </p>
                            
                            <!-- Action Buttons -->
                            <div class="d-grid gap-2 d-md-block">
                                <a href="/" class="btn btn-primary btn-lg px-4 me-md-2">
                                    <i class="bi bi-house-door me-2"></i>Go Home
                                </a>
                                <button onclick="history.back()" class="btn btn-outline-secondary btn-lg px-4">
                                    <i class="bi bi-arrow-left me-2"></i>Go Back
                                </button>
                            </div>
                            
                            <!-- Additional Help -->
                            <div class="mt-5">
                                <p class="text-muted small">
                                    If you believe this is an error, please 
                                    <a href="#" class="text-decoration-none">contact support</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/_footer') %>