<%- include('../partials/_header') %>
<div class="row ">
    <div class="col-12">
        <div class="card rounded-0">
            <div class="card-body">
                <h4 class="card-title"><%= course.title %></h4>
                <a href="<%= course.handout_pdf %>" class="text-decoration-none text-muted fw-semibold" download>Download <%= course.handout_original_filename %></a>
                <hr>
                <h4 class="card-title">Lectures</h4>
                <ul class="list-group">
                    <% lectures.forEach((lecture,index) => { %>
                        <li class="list-group-item bg-transparent border-0 px-0">
                            <span class="text-dark fw-semibold">(<%= index + 1 %>) &nbsp;</span>
                            <a href="/admin/lectures/<%= lecture.id %>" class="text-decoration-none text-dark">
                                <strong style="width: 65%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" data-title = "lecture-title"> <%= lecture.title %> </strong>
                            </a>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/_footer') %>