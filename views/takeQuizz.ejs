<%- include('partials/_header') %>
    <div class="col-lg-9">
        <div class="bg-primary text-white p-2 border border-1 border-dark">
            <div class="d-flex align-items-center justify-content-between position-relative">
                <h1 class="m-0 p-0"><%= quizz.title %></h1>
                <div id="timer"></div>
                <p class="m-0">Total Marks : <strong><%= quizData.length %></strong></p>  
            </div>
        </div>
        <div class="content-container">
            <div class="mt-3 fw-bold" id="question-index"></div>
            <!-- Question container -->
            <div id="question-container" class="border border-1 border-dark my-3 p-3">
                <strong id="question-text"></strong>
            </div>

            <!-- Options container -->
            <ul id="options-container" class="p-0 list-group"></ul>
            <div class="d-flex justify-content-end align-items-center gap-3">
                <!-- Back Button -->
                <button id="back-btn" class="btn btn-primary mt-3">Back</button>
                <!-- Next Button -->
                <button id="next-btn" class="btn btn-primary mt-3">Next</button>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <h4 class="m-0 py-1">Questions</h4>
        <div id="questions-navigation-container" class="d-flex flex-wrap gap-1 border p-2 border-1 border-dark"></div>      
    </div>
<script type="application/json" id="quiz-data">
    <%- JSON.stringify(quizData) %>
</script>
<script type="application/json" id="current-quiz">
    <%- JSON.stringify(quizz) %>
</script>
<script>
    let courseId = "<%= course.id %>";
    let quizzId = "<%= quizz.id %>";
    let userId = "<%= user.userId %>";
    let quizz = JSON.parse(document.getElementById("current-quiz").textContent);
    let quizData = JSON.parse(document.getElementById("quiz-data").textContent);
</script>
<script src="/js/notifications.js"></script>
<script src="/js/validateTakeQuizz.js"></script>
<% if(quizData.length > 0){%>
<script src="/js/takeQuizz.js"></script>
<%}%>
<%- include('partials/_footer') -%>
