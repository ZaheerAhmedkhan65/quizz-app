<%- include('../partials/_header') %>

<div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-6 d-flex align-items-center gap-2">
        <h2 class="my-2">My Courses</h2>
        <span class="text-muted">(<%= currentSemester.title %>)</span>
      </div>
      <div class="col-6">
        <a class="btn bg-secondary-subtle float-end" href="/quiz/history">History</a>
      </div>
    </div>
    <div class="row my-3">
      <!-- Main Content Column -->
      <div class="col-lg-8 order-lg-1 order-2">
        <% if(courses.length > 0) { %>
          <div class="row g-4">
            <% courses.forEach(course => { 
              let courseProgress = progress.find(p => p.course_id === course.id);
            %>
              <div class="col-xl-4 col-lg-6 col-md-6">
                <div class="card course-card h-100 border-0 shadow-lg">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                      <h5 class="card-title mb-0 text-truncate" style="max-width: 100%;">
                        <a href="/courses/<%= course.id %>" class="text-decoration-none fw-semibold text-reset">
                          <%= course.title %>
                        </a>
                      </h5>
                      <div class="dropdown">
                        <button class="btn btn-sm rounded-circle btn-outline-primary border-0" type="button" data-bs-toggle="dropdown">
                          <i class="bi bi-three-dots-vertical"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                          <li>
                           <a class="dropdown-item text-reset fw-semibold"  href="https://drive.google.com/uc?export=download&id=<%= course.handout_pdf %>" download>
                              <i class="bi bi-download me-1"></i> Download PDF
                           </a>
                          </li>
                          <li>
                            <form class="delete-course-btn" data-course-id="<%= course.id %>" action="/courses/<%= course.id %>/leave" method="POST">
                              <button type="submit" class="dropdown-item text-reset fw-semibold" onclick="return confirm('Are you sure you want to leave this course?')">
                                <i class="bi bi-door-open me-1"></i> Leave Course
                              </button>
                            </form>
                          </li>
                        </ul>
                      </div>

                    </div>
                    
                    <% if(courseProgress) { %>
                    <a href="/courses/<%= course.id %>" class="text-decoration-none text-reset">
                      <div class="progress-container mb-1" style="width: 100%;">
                        <div class="d-flex justify-content-between mb-1">
                          <small class="text-muted">Progress</small>
                          <small class="text-primary fw-bold"><%= courseProgress.course_progress %>%</small>
                        </div>
                        <div class="progress" style="height: 6px;">
                          <div class="progress-bar bg-primary" role="progressbar" 
                               style="width: <%= courseProgress.course_progress %>%" 
                               aria-valuenow="<%= courseProgress.course_progress %>" 
                               aria-valuemin="0" 
                               aria-valuemax="100">
                          </div>
                        </div>
                      </div>
                    </a>  
                    <% } %>
                    <div class="d-flex justify-content-between">
                      <small class="text-muted"><%= course.total_lectures %> lectures</small>
                      <small class="text-muted"><%= course.completed_lectures||0 %> completed</small>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center py-5">
            <i class="bi bi-journal-text display-4 text-muted mb-3"></i>
            <h4 class="text-muted">No courses yet</h4>
            <p class="text-muted">Get started by joining course and start learning</p>
            <a href="/courses" class="btn btn-primary">Courses</a>
          </div>
        <% } %>
      </div>
  
      <!-- Sidebar Column -->
      <div class="col-lg-4 order-lg-2 order-1 mb-lg-0 mb-sm-3">
        <div class="position-sticky" style="top: 0px;">
          <% if(courses.length > 0) { %>
            <div class="card border-0 shadow-sm">
              <div class="card-body">
                <h5 class="card-title">Progress Overview</h5>
                <div class="d-flex align-items-center mb-2">
                  <div class="flex-grow-1">
                    <div class="progress" style="height: 8px;">
                      <div class="progress-bar bg-success" role="progressbar" 
                           style="width: <%= overallProgress %>%" 
                           aria-valuenow="<%= overallProgress %>" 
                           aria-valuemin="0" 
                           aria-valuemax="100">
                      </div>
                    </div>
                  </div>
                  <div class="ms-3">
                    <span class="fw-bold"><%= overallProgress %>%</span>
                  </div>
                </div>
                <div class="d-flex justify-content-between">
                  <small class="text-muted"><%= courses.length %> courses</small>
                  <small class="text-muted"><%= completedCourses %> completed</small>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>


<!-- JavaScript -->
<script src="/js/courseProgress.js"></script>
<script src="/js/refreshToken.js"></script> 

<%- include('../partials/_footer') %>