    <div class="col-12 p-0 mt-3">
        <h2>Lectures</h2>
    </div>
    <div class="col-12 p-0">
        <ul class="list-group">
            <% lectures.forEach((lecture, index) => { %>
                <a href="/courses/<%= course.slug %>/<%= lecture.id %>" class="text-decoration-none text-dark" style="width: fit-content;">
                    <li class="list-group-item bg-transparent border-0 px-0 <%= lecture.is_completed ? 'text-success' : '' %>">
                        <span class="fw-semibold">(<%= index + 1 %>) &nbsp;</span>
                        <strong style="width: 65%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" data-title = "lecture-title"> <%= lecture.title %> </strong>
                        <%- lecture.is_completed ? `
                        <svg class="download-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <polyline points="22 4 12 14.01 9 11.01"></polyline>
                        </svg>
                        ` : '' %>
                    </li>
                </a>
            <% }) %>
        </ul>
    </div>
