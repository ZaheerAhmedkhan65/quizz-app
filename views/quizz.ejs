<%- include('partials/_header') %>

<div class="col-lg-3">
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
                <h2 style="width: 65%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" class="card-title m-0 p-0">
                    <%= quizz.title %>
                </h2>
                <% if (quizData.length> 0 && quizResults.length < 5) { %>
                    <a class="btn btn-sm btn-success my-3"
                        href="/api/courses/<%= course.id %>/quizzes/<%= quizz.id %>/take">
                        <%= quizResults.length> 0 ? 'Retake Quiz' : 'Take Quiz' %>
                    </a>
                <% } %>
            </div>
            
            <div class="progress-bar-container mb-2">
                <div class="progress-bar-fill" data-progress="<%= quizz.quizz_progress %>"></div>
            </div>
            <hr>
            <div class="mt-3">
                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Import data
                </button>
            </div>
        </div>
    </div>

    
    <% if(quizData.length> 0 && quizResults.length > 0) { %>
        <div class="card mb-4">
            <div class="card-body">
                <div id="graph"></div>
            </div>
        </div>
    <% } %>
</div>

<div class="col-lg-6" style="height: 90vh; overflow: hidden;">
    <div class="card mb-2">
        <div class="card-body">
            <div class="card-title">
                <h3 class="m-0">New question</h3>
            </div>
            <form id="question-form" action="/api/courses/<%= course.id %>/quizzes/<%= quizz.id %>/questions" method="post"
                class="d-flex align-items-center gap-1">
                <input type="text" id="question-text" name="question_text" class="form-control"
                    placeholder="Write Question text" required>
                <button type="submit" id="createBtn" class="btn btn-sm btn-primary">Create</button>
            </form>
        </div>
    </div>
    <h3>Questions</h3>
    <% if(quizData.length> 0) { %>
        <ul id="questions-container" class="list-group overflow-auto"
            style="height: 100%; padding:10px 0px 150px;">
            <% quizData.forEach((question, index)=> { %>
                <li class="card list-group-item mb-4">
                    <div class="card-body">
                        <div id="question_<%= question.id %>"
                            class="card-title py-3 d-flex align-items-center justify-content-between">
                            <strong class="w-100 d-flex align-items-center gap-1">
                                <span id="question-index-container-<%= question.id %>">
                                    <%=index+1%> :
                                </span>
                                <span data-text="question-text" id="question-text-<%= question.id %>">
                                    <%= question.question_text %>
                                </span>
                            </strong>
                            <div class="btn-group dropup">
                                <button type="button" class="bg-transparent border-0" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-item edit-question-btn" data-question-id="<%= question.id %>">
                                        Edit</li>
                                    <li class="dropdown-item text-danger">
                                        <form class="delete-question" data-question-id="<%= question.id %>"
                                            action="/api/courses/<%= course.id %>/quizzes/<%= quizz.id %>/questions/<%= question.id %>/delete"
                                            method="post">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <hr class="m-0">
                        <ul class="list-group" id="options-container-<%= question.id %>">
                            <% question.options.forEach(option=> { %>
                                <li class="list-group-item border-0 d-flex align-items-center gap-1 px-0">
                                    <input type="radio" name="question_<%= question.id %>" id="option_<%= option.id %>"
                                        value="<%= option.option_text %>" class="form-check-input">
                                    <label for="option_<%= option.id %>">
                                        <%= option.option_text %>
                                        <%= option.is_correct ? '(Correct)' : '' %>
                                    </label>
                                </li>
                            <% }) %>
                        </ul>
                        <% if (question.options.length <=3) { %>
                            <form class="option-form"
                                action="/api/courses/<%= course.id %>/quizzes/<%= quizz.id %>/questions/<%= question.id %>/options"
                                method="post">
                                <input type="text" name="option_text" class="form-control mt-3"
                                    placeholder="Enter Option text" required>
                                <select name="is_correct" class="form-select mt-3">
                                    <option value="0">Incorrect</option>
                                    <option value="1">Correct</option>
                                </select>
                                <div class="text-end mb-2">
                                    <button type="submit" class="btn btn-sm btn-primary mt-3">Add Option</button>
                                </div>
                            </form>
                        <% } %>

                    </div>
                    
                    
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No questions have been created for this quiz.</p>
        <ul id="questions-container" class="list-group overflow-auto rounded-0"  style="height: 100%; padding-bottom: 130px;"></ul>
    <% } %>
</div>

<% if(quizResults.length> 0) {%>
    <div class="col-lg-3">
        <div  class="card">
            <div class="card-body">
                <div id="results-table" class="card mb-4">
                    <div class="card-header px-2">
                      <h4 class="m-0 p-0">Quiz Results</h4>
                    </div>
                    <div class="table-responsive">
                      <table class="table table-bordered table-striped m-0">
                        <thead>
                          <tr>
                            <th class="py-1"><span>TotalMarks</span></th>
                            <th class="py-1"><span>ObtainedMarks</span></th>
                            <th class="py-1"><span>Percentage(%)</span></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% quizResults.forEach((result) => { %>
                            <tr>
                              <td class="py-1"><%= result.total_marks %></td>
                              <td class="py-1"><%= result.score %></td>
                              <td class="py-1"><%= ((result.score / result.total_marks) * 100).toFixed(2) %>%</td>
                            </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                  
                <ul id="results-container" class="list-group">
                    <% quizResults.forEach((result, attemptIndex)=> { %>
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mt-3">Attempt <%= attemptIndex + 1 %></h5>
                            </div>
                            <div class="card-body">
                                <% Object.entries(result.answers).forEach(([questionId, answerId], index)=> {
                                    const questionObj = questions.find(q => q.id == questionId);
                                    const answerObj = answers.find(a => a.id == answerId);
                                    %>
                                    <li class="list-group-item bg-transparent">
                                        <strong>#<%= index + 1 %> : <%= questionObj ? questionObj.question_text
                                                    : "Question not found" %></strong><br>
                
                                        <% if (answerObj) { %>
                                            <span class="<%= answerObj.is_correct ? 'text-success' : 'text-danger' %>">
                                                <%= answerObj.is_correct ? '✔️' : '❌' %><%= answerObj.option_text %>
                                            </span>
                                        <% } else { %>
                                            <strong>Selected Answer:</strong> Not Answered
                                        <% } %>
                                    </li>
                                <% }); %>
                            </div>
                        </div>
                        
                        
                    <% }); %>
                </ul>
            </div>
        </div>
        
    </div>
<% } %>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Import Questions</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="predefined-questions-container">
                    <textarea class="form-control" style="height: 70vh;" id="predefined-questions"
                        placeholder='Enter questions data in JSON format, e.g.:
[
    {
        "id": 250001,
        "question_text": "Sample question",
        "options": [
            {"option_text": "Option 1", "is_correct": false},
            {"option_text": "Option 2", "is_correct": true}
        ]
    }
]'></textarea>
                    <div class="modal-footer">
                        <input type="hidden" id="predefined-questions-formate" value='
                    [
                        {
                            "id": 250001,
                            "question_text": "Sample question",
                            "options": [
                                {"option_text": "Option 1", "is_correct": false},
                                {"option_text": "Option 2", "is_correct": true}
                            ]
                        }
                    ]'>
                        <button id="copyFormate" type="button" class="btn btn-success">
                            Copy Text Format
                        </button>
                        <button id="predefined-questions-button" class="btn btn-primary">Submit</button>
                    </div>
                </div>
                <div id="json-questions-container" class="mt-3"></div>
            </div>
        </div>
    </div>
</div>

