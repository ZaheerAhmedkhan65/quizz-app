<%- include('../partials/_header') %>
<div class="p-4 p-md-5 mb-5">
        <div class="col-lg-6 px-0 mx-auto">
            <!-- Hero Section -->
            <section class="hero-section">
                <div class="container">
                    <h1 class="display-5 fst-italic text-uppercase mb-3 text-center">Log in</h1>
                    <form action="/auth/login" method="post" class="mx-5">
                        <div class="form-group  mb-2">
                            <label for="email" class="form-label m-0">Email</label>
                            <input type="email" id="email" name="email" placeholder="Email" class="form-control" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="password" class="form-label m-0">Password</label>
                            <input type="password" id="password" name="password" placeholder="Password" class="form-control" required>
                            <div class="d-flex align-items-center mt-2 gap-1">
                                <input type="checkbox" class="form-check m-0" name="show-password" id="show-password-checkbox">
                                <label class="m-0 text-muted" style="font-size: 12px;" for="show-password-checkbox">Show password</label>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-sm btn-primary" value="Log in">
                        <a class="mt-5 text-decoration-none text-reset d-block" href="/auth/forgot-password">
                            Forgot password?
                            <span class="text-reset fw-semibold">Reset</span>
                        </a>
                        <a class="mt-1 text-decoration-none text-reset d-block" href="/auth/create-account">
                            Don't have an account?
                            <span class="text-reset fw-semibold">Create one</span>
                        </a>
                        <div class="text-center mt-4">
                            <a href="/auth/google" class="btn btn-sm btn-outline-dark w-100">
                                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M17.64 9.20454C17.64 8.56636 17.5827 7.95272 17.4764 7.36363H9V10.845H13.8436C13.635 11.97 13.0009 12.9232 12.0477 13.5614V15.8195H14.9564C16.6582 14.2527 17.64 11.9455 17.64 9.20454Z" fill="#4285F4"></path>
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M9 18C11.43 18 13.4673 17.1941 14.9564 15.8196L12.0477 13.5614C11.2418 14.1014 10.2109 14.4205 9 14.4205C6.65591 14.4205 4.67182 12.8373 3.96409 10.71H0.957275V13.0418C2.43818 15.9832 5.48182 18 9 18Z" fill="#34A853"></path>
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M3.96409 10.71C3.78409 10.17 3.68182 9.59318 3.68182 8.99999C3.68182 8.40681 3.78409 7.82999 3.96409 7.28999V4.95818H0.957273C0.347727 6.17318 0 7.54772 0 8.99999C0 10.4523 0.347727 11.8268 0.957273 13.0418L3.96409 10.71Z" fill="#FBBC05"></path>
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M9 3.57955C10.3214 3.57955 11.5077 4.03364 12.4405 4.92545L15.0218 2.34409C13.4632 0.891818 11.4259 0 9 0C5.48182 0 2.43818 2.01682 0.957275 4.95818L3.96409 7.29C4.67182 5.16273 6.65591 3.57955 9 3.57955Z" fill="#EA4335"></path>
                                </svg>
                                Continue with Google
                            </a>
                        </div>                          
                    </form>
                </div>
            </section>
        </div>
    </div>

    <script src="/js/showPassword.js"></script>
<%- include('../partials/_footer') %>
