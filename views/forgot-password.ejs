<%- include('partials/_header') %>
<div class="row d-flex justify-content-center align-items-center">
    <div class="col-lg-6">
        <div class="col-lg-6 mt-5">
            <h4>Forgot password</h4>
            <form action="/auth/forgot-password" method="post">
                <div class="form-group mb-2">
                    <label for="email" class="form-label m-0">Email</label>
                    <input type="email" id="email" name="email" placeholder="Email" class="form-control" required>
                </div>
                <input type="submit" class="btn btn-sm btn-primary" value="Send reset link">
                <a class="mt-3 text-decoration-none text-dark d-block" href="/auth/login">
                    Already have an account?
                    <span class="text-primary">Log in</span>
                </a>
            </form>
        </div>
    </div>
</div>

<script type="application/json" id="flash-data">
    <%- JSON.stringify({
        error: messages.error || null,
        success: messages.success || null
    }) %>
</script>

<script>
    try {
        const flashData = JSON.parse(document.getElementById('flash-data').textContent);
        if (flashData.error) {
            showNotification(flashData.error[0], 'error');
        }
        if (flashData.success) {
            showNotification(flashData.success[0], 'success');
        }
    } catch (e) {
        console.log('No flash messages to display');
    }
</script>
<script src="/js/notifications.js"></script>
<%- include('partials/_footer') %>