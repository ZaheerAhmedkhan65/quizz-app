<%- include('../partials/_header') %>
<div class="container mt-5">
    <form action="/admin/courses/<%= course.id %>/update" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= course.title %>" required>
        </div>
        <div class="form-group">
            <label for="slug">Slug</label>
            <input type="text" class="form-control" id="slug" name="slug" value="<%= course.slug %>" required>
        </div>
        <div class="form-group">
            <label for="handout_pdf">Handout URL</label>
            <input type="file" class="form-control-file" id="handout_pdf" name="handout_pdf" accept=".pdf">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

<%- include('../partials/_footer') %>