<%- include('../partials/_header') %>
<%- include('../partials/_flash') %>
<div class="p-4 p-md-5 mb-5">
        <div class="col-lg-6 px-0 mx-auto">
            <!-- Hero Section -->
            <section class="hero-section">
                <div class="container">
                    <h1 class="display-5 fst-italic text-uppercase mb-3 text-center">Forgot password</h1>
                    <form action="/auth/forgot-password" method="post" class="mx-5">
                        <div class="form-group mb-3">
                            <label for="email" class="form-label m-0">Email</label>
                            <input type="email" id="email" name="email" placeholder="Email" class="form-control" required>
                        </div>
                        <input type="submit" class="btn btn-sm btn-primary" value="Send reset link">
                        <a class="mt-5 text-decoration-none text-reset d-block" href="/auth/login">
                            Already have an account?
                            <span class="text-reset fw-semibold">Log in</span>
                        </a>
                    </form>
                </div>
            </section>
        </div>
    </div>
<%- include('../partials/_footer') %>
