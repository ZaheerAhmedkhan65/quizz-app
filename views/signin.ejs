<%- include('partials/_header') %>
    <div class="row">
            <div class="col-lg-6 d-flex justify-content-center">
                <div class="col-lg-6 mt-5">
                    <h4>Sign in</h4>
                    <form action="/auth/signin" method="post">
                        <div class="form-group  mb-2">
                            <label for="username" class="form-label m-0">Username</label>
                            <input type="text" id="username" name="username" placeholder="Username" class="form-control" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="password" class="form-label m-0">Password</label>
                            <input type="password" id="password" name="password" placeholder="Password" class="form-control" required>
                            <div class="d-flex align-items-center mt-1 gap-1">
                                <input type="checkbox" class="form-check" name="show-password" id="show-password-checkbox">
                                <label class="m-0 text-muted" style="font-size: 14px;" for="show-password-checkbox">Show password</label>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-sm btn-primary" value="Sign in">
                        <a class="mt-3 text-decoration-none text-dark d-block" href="/auth/signup">
                            Don't have an account?
                            <span class="text-primary">Sign up</span>
                        </a>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 d-flex justify-content-start">
                <div class="col-lg-10 mt-5">
                    <h4>Instruction Video</h4>
                    <div class="card rounded-0">
                        <video src="/videos/quizz attempt video.mp4" controls autoplay="true" loop class="mt-2" style="width: 100%; height: auto;"></video>
                    </div>
                </div>
            </div>
    </div>
    <script src="/js/showPassword.js"></script>
<%- include('partials/_footer') %>
